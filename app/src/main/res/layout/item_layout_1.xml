<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:minHeight="@dimen/list_item_height"
    android:background="@color/list_item_color">

    <ImageView
        android:id="@+id/places_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/places_churna_island"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/places_image"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/places_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mazar-e-Quaid"
            android:textStyle="bold"
            android:textColor="@color/text_main_color"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="bottom"/>

        <TextView
            android:id="@+id/places_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1970"
            android:textColor="@color/text_main_color"
            android:textSize="18sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"/>
    
</RelativeLayout>